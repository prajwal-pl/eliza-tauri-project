{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ElizaOS CLI Desktop",
  "version": "0.1.0",
  "identifier": "com.elizaos.desktop-cli",
  "build": {
    "beforeDevCommand": "npm run vite:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run vite:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ElizaOS CLI Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "os": {
      "all": true
    },
    "cli": {
      "description": "ElizaOS CLI Desktop - Interactive terminal and CLI interface",
      "longDescription": "A desktop interface for ElizaOS with both GUI and CLI capabilities",
      "args": [
        {
          "name": "verbose",
          "short": "v",
          "description": "Enable verbose logging",
          "multiple": true
        },
        {
          "name": "config",
          "short": "c",
          "description": "Path to config file",
          "takesValue": true
        },
        {
          "name": "headless",
          "description": "Run in headless mode (no GUI)"
        }
      ],
      "subcommands": {
        "doctor": {
          "description": "Run system health checks",
          "args": [
            {
              "name": "verbose",
              "short": "v",
              "description": "Verbose health check output"
            }
          ]
        },
        "prompt": {
          "description": "Send a prompt to the configured API",
          "args": [
            {
              "name": "message",
              "index": 1,
              "takesValue": true,
              "required": true,
              "description": "Prompt message to send"
            },
            {
              "name": "model",
              "short": "m",
              "takesValue": true,
              "description": "Model to use for the prompt"
            }
          ]
        },
        "terminal": {
          "description": "Launch interactive terminal mode",
          "args": [
            {
              "name": "directory",
              "short": "d",
              "takesValue": true,
              "description": "Starting directory"
            }
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
