{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ElizaOS CLI Desktop",
  "version": "0.1.0",
  "identifier": "com.elizaos.desktop-cli",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ElizaOS CLI Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "node",
          "cmd": "node",
          "args": true,
          "sidecar": false
        },
        {
          "name": "npm",
          "cmd": "npm",
          "args": true,
          "sidecar": false
        },
        {
          "name": "npx",
          "cmd": "npx",
          "args": true,
          "sidecar": false
        },
        {
          "name": "eliza",
          "cmd": "eliza",
          "args": true,
          "sidecar": false
        },
        {
          "name": "which",
          "cmd": "which",
          "args": true,
          "sidecar": false
        },
        {
          "name": "where",
          "cmd": "where",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "store": {
      "default": true
    },
    "os": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
